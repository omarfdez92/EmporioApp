<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmployeeDataActivity" android:background="@color/colorPrimaryDark">

    <ImageView
            android:layout_width="140dp"
            android:layout_height="250dp"
            android:id="@+id/employeeImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp" android:scaleType="centerCrop"
            app:srcCompat="@drawable/docm" android:layout_marginTop="152dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/employeeName"
            app:layout_constraintTop_toTopOf="@+id/employeeImage"
            app:layout_constraintStart_toEndOf="@+id/employeeImage" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" tools:text="Francisco Parra" app:fontFamily="@font/montserrat"
            android:textSize="24sp" android:textColor="@color/colorAccent" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/employeeField" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/employeeName" tools:text="Cardiologia"
            app:fontFamily="@font/montserrat" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/employeeName" android:textColor="@color/colorAccent"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:id="@+id/textView5" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/employeeField"
            app:layout_constraintStart_toStartOf="@+id/employeeField"
            android:text="Medico con mas de 15 aÃ±os de experiencia con especialidades en diferentes areas, y siempre disponible para ayudar a la gente que lo necesite."
            android:textColor="@color/colorAccent" android:textSize="18sp"/>
    <Button
            android:text="Aceptar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/acceptBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent" android:textStyle="bold"
            android:textSize="18sp" android:background="@color/colorBackground" android:onClick="acceptBtnClick"/>
</android.support.constraint.ConstraintLayout>